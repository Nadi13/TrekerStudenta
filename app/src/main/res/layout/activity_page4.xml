<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity_Page_4">

    <TextView
        android:id="@+id/back_name_group"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/search"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/imageView9"
        android:background="@drawable/search" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/search"
        android:background="@drawable/menu" />

    <TextView
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/group_"
        android:textColor="@color/dark_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/skipped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_name_group"
        android:text="@string/skipped_"
        android:textColor="@color/dark_grey"
        android:layout_marginTop="40sp"
        android:layout_marginStart="30sp"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectRecycler"
        android:layout_width="wrap_content"
        android:layout_height="467dp"
        android:layout_below="@+id/skipped"
        android:layout_alignStart="@+id/skipped"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/skipped"
        android:layout_alignBottom="@+id/skipped"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/menu"
        app:srcCompat="@drawable/frame_4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/menu"
        android:layout_below="@+id/back_name_group"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="25dp"
        app:srcCompat="@drawable/frame_4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/imageView6"
        android:text="@string/time_"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/skipped"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:layout_toStartOf="@+id/imageView5"
        android:textSize="13sp"
        android:textColor="@color/dark_grey"
        android:text="@string/subject_2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignStart="@+id/group"
        android:layout_alignTop="@+id/group"
        android:layout_alignBottom="@+id/group"
        android:layout_marginStart="64dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="@string/menu"
        app:srcCompat="@drawable/down" />

</RelativeLayout>
