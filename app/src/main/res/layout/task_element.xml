<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/taskName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/examPic2"
        android:gravity="center"
        android:text="Best Of Luck"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/examPic3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/circle"
        app:tint="#808080" />

    <TextView
        android:id="@+id/subjectName"
        android:text="subject lul"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/examPic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/subjectName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/circle"
        app:tint="#808080" />

    <TextView
        android:gravity="center"
        android:id="@+id/dateString"
        android:layout_below="@+id/subjectName"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/examPic"
        android:layout_width="wrap_content"
        android:text="May 23, 2015"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/examPic2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/dateString"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/circle"
        app:tint="#808080" />

    <TextView
        android:gravity="center"
        android:id="@+id/taskName"
        android:layout_below="@+id/dateString"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/examPic2"
        android:layout_width="wrap_content"
        android:text="Best Of Luck"
        android:textSize="16sp" />


    <TextView
        android:background="#808080"
        android:id="@+id/border2"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent" />

    <ImageView
        android:id="@+id/examPic4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/taskName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/circle"
        app:tint="#808080" />

    <TextView
        android:id="@+id/timeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/examPic2"
        android:gravity="center"
        android:text="time example"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/examPic5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/timeString"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/circle"
        app:tint="#808080" />

    <TextView
        android:id="@+id/reminderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeString"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/examPic5"
        android:gravity="center"
        android:text="ALARM"
        android:textSize="16sp" />

</RelativeLayout>
